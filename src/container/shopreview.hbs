<main class="p-4">
  {{> navLinks}}
  <div class="row">
    <div class="col-8">
      {{#with formBlock}}
        <h1>{{header}}</h1>
        {{#with rating}}
          <div class="my-3">{{title}}: {{value}}</div>
        {{/with}}
        {{#with actionBlock}}
          <div class="nav nav-tabs">
            {{#each tabs}}
              <div class="nav-link {{#if isActive}} active {{/if}}">{{text}}</div>
            {{/each}}
          </div>
          <hr class="my-5">
          <div class="card p-3">
            {{#with report}}
              <p class="mb-2">{{title}}</p>
              <div class="col-4">
                {{#with button}}
                  <a href="{{link}}" class="btn btn-secondary">{{text}}</a>
                {{/with}}
              </div>
            {{/with}}
          </div>
        {{/with}}
        <hr class="my-5">
        {{#with feedbackBlock}}
          <h2 class="mb-5">{{title}}</h2>
          {{#each buttons}}
            <a href="{{link}}" class="btn me-2 {{#if isWarning}} btn-warning {{/if}} {{#if isSuccess}} btn-success {{/if}} {{#if isDanger}} btn-danger {{/if}}">{{text}}</a>
          {{/each}}
        {{/with}}
      {{/with}}
    </div>
    <div class="col-4">
      {{#with formBlock}}
        {{#with goodsInfo}}
          <div class="card p-3 mb-3">
            <div class="col-7 mb-3">
              <img class="card-img-top" src="{{photo}}" alt="{{name}}">
            </div>
            <b>{{name}}</b>
          </div>
          <div class="card p-3 pb-1 mb-3">
            <div><b>{{price}}</b></div>
            <div class="mb-2">{{#if inMarket}} Є в наявності {{/if}}</div>
            {{#each buttons}}
              <div class="col">
                <a href="{{link}}" class="btn mb-2 {{#if isPrimary}} btn-primary {{/if}} {{#if isSecondary}} btn-secondary {{/if}}">{{text}}</a>
              </div>
            {{/each}}
          </div>
          <div class="card p-3">
            {{#with seller}}
              <div>{{title}}: <b>{{value}}</b></div>
            {{/with}}
          </div>
        {{/with}}
      {{/with}}
    </div>
  </div>
  <hr class="my-5">
  {{> reviewItem}}
  {{> successBlock}}
  <hr>
  {{> footerShop}}
</main>