<div class="row">
  <div class="col-6">
    {{#with main}}
      <main>
          <section>
              {{> title data="My educations" big=true}}
              <div class='form-check'>
                {{#each educations}}
                  <div class="mb-2">
                    <label class='form-check-label'>{{name}}</label>
                    <input type='checkbox' class='form-check-input' {{#if isEnd}} checked {{/if}} />
                    {{#unless isEnd}} (ще в процесі) {{/unless}}
                  </div>
                {{/each}}
              </div>
          </section>
      </main>
    {{/with}}
  </div>
  <div class="col-6">
    {{#with main}}
      <main>
          <section>
              {{> title data="My certificates" big=false}}
              <ul>
                  {{#each certificates}}
                      <li>{{name}} ({{id}})</li>
                  {{/each}}
              </ul>
          </section>
      </main>
    {{/with}}
  </div>
</div>