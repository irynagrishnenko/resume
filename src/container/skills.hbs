{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}
<div class="row">
  <div class="col-6">
    {{#with main}}
      <main>
        <section>
            {{> title data="All skills" big=true}}
            <ul>
              {{#each skills}}
                <li>
                  {{name}}
                  {{#if point includeZero=true}} ({{point}}) {{/if}}
                  {{#if isTop}} (top!) {{/if}}
                  {{#unless point includeZero=true}} (не вивчаємо) {{/unless}}
                  {{#unless point}}
                    {{#if point includeZero=true}} (зараз вивчаємо) {{/if}}
                  {{/unless}}
                </li>
              {{/each}}
            </ul>
        </section>
      </main>
    {{/with}}
  </div>
  <div class="col-6">
    {{#with main}}
      <main>
        <section>
            {{> title data="My hobbies" big=false}}
            {{#each hobbies}}
              <div class="form-check form-switch">
                <label class="form-check-label">{{name}}</label>
                <input
                  type="checkbox"
                  class="form-check-input" {{#if isMain}} checked {{/if}} />
              </div>
            {{/each}}
        </section>
      </main>
    {{/with}}
  </div>
</div>


