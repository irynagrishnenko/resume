{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div class="mb-5">
  {{#with main}}
    <main>
      <section>
        {{> title data="Work history" big=true}}
          <div>
            <ul>
              {{#each works}}
                <li>
                  <div class="mb-2">{{position}}</div>
                  <div class="mb-2">
                    {{duration.from}} - 
                    {{#if duration.to}}
                      {{duration.to}}
                    {{else}}
                      (досі працюю)
                    {{/if}}
                  </div>
                  <div class="mb-5">
                    {{#if company.url}} {{> link text=company.name href=company.url blank=true noLine=true}} 
                      {{else}} <b>{{company.name}}</b> 
                    {{/if}}
                  </div>
                  <div class="mb-2"><strong>Projects ({{projectAmount}})</strong></div>
                  <ul>
                    {{#each projects}}
                      <li>
                        <div class="mb-2">{{> link text=name href=url blank=true noLine=true}}</div>
                        <div class="mb-4"><p>{{about}}</p></div>
                        <div class="mb-2"><em><span class="badge text-bg-primary">Project stacks ({{stackAmount}})</span></em></div>
                        <div class="mb-4">
                          <ul>
                            {{#each stacks}}
                              <li>{{name}}</li>
                            {{/each}}
                          </ul>
                        </div>
                        <div class="mb-2"><em><span class="badge text-bg-primary">Project awards</span></em></div>
                        <div>
                          <ul>
                            {{#each awards}}
                              <li>{{name}}</li>
                            {{/each}}
                          </ul>
                        </div>
                      </li>
                    {{/each}}
                  </ul>
                </li>
              {{/each}}
            </ul>
          </div>
      </section>
    </main>
  {{/with}}
</div>

