<main class='p-4'>
  {{> navLinks}}
  {{#with header}}
    <h1 class='mb-3'>{{title}}</h1>
    {{#with button}}
      <a
        href='{{link}}'
        class='btn btn-outline-secondary'
      >{{text}}</a>
    {{/with}}
  {{/with}}
  <hr class='mt-5 mb-5' />
  <section>
    {{#each goodsBlock}}
      {{> cartGoodsItem}}
    {{/each}}
    <hr class='mt-5 mb-5'>
    {{#with total}}
      <h3>{{title}}</h3>
      <div class='display-5'><b>{{amount}}</b></div>
      <div>{{delivery}}</div>
      {{#each buttons}}
        <div class='mt-3'>
          <a href='{{link}}' class='btn {{#if isSuccess}} btn-success {{/if}} {{#if isOutline}} btn-outline-success {{/if}}'>{{text}}</a>
        </div>
      {{/each}}
    {{/with}}
    <hr class='mt-5 mb-5'>
    {{#with goodsOtherBlock}}
      <h2 class='text-center'>{{title}}</h2>
      <div class='row'>
        {{#each cards}}
          <div class='col-4 px-1 py-3'>
            <div class='card'>
              <img
                class='card-img-top'
                src='{{image}}'
                alt='{{title}}'
              />
              <div class='card-body'>
                <h5 class='card-title text-capitalize'>{{title}}
                  {{#if isHot}}
                    <button
                      class='btn btn-warning btn-sm rounded-pill'
                    >Hot!</button>
                  {{/if}}
                  {{#if idNew}}
                    <button
                      class='btn btn-primary btn-sm rounded-pill'
                    >Новe</button>
                  {{/if}}
                </h5>
                <p class='mb-0'>{{description}}</p>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    {{/with}}
    <hr class='mt-5 mb-5'>
    {{#with subscribe}}
      <div class="card text-bg-dark">
        <div class="card-body p-2 pb-0">
          <h2 class="card-title">{{header}}</h2>
          <p class="mb-4">{{description}}</p>
          {{#each buttons}}
            <a href="{{link}}" class="btn btn-primary mb-2">{{text}}</a>
            <br>
          {{/each}}
        </div>
      </div>
    {{/with}}
  </section>
  <hr class='mt-5 mb-2'>
  {{> footerShop}}
</main>