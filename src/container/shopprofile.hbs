<main class='p-4'>
  {{> navLinks}}
  <h1>{{header}}</h1>
  <div class='row ps-3'>
    {{#with purchase}}
      <div class='nav nav-tabs mb-3'>
        {{#each tabs}}
            <div class='nav-link {{#if @first}} active {{/if}}'>{{this}}</div>
        {{/each}}
      </div>
      <div class='row mb-3'>
        {{#with actionBlock}}
          <div class='col-4 pe-1 ps-0'>
            {{#with input}}
              <input class='form-control' placeholder='{{placeholder}}' />
            {{/with}}
          </div>
          <div class='col-7 ps-1'>
            {{#each buttons}}
              <a href='{{link}}' class='btn {{#if isSuccess}} btn-success {{/if}} {{#if isOutline}} btn-outline-success {{/if}} {{#if isDanger}} btn-outline-danger {{/if}}'>{{text}}</a>
            {{/each}}
          </div>
        {{/with}}
      </div>
    {{/with}}
  </div>
  <hr>
  <section>
    {{#each purchase.itemList}}
      {{> purchaseItem}}
    {{/each}}
  </section>
  <hr class='my-5'>
  <section>
    {{#with userInfo}}
      <h2 class='mb-5'>{{title}}</h2>
      <div class='card p-2'>
        {{#with profileData}}
          <h3>{{title}}</h3>
          <div class='card p-2 mt-3'>
            <div class='row'>
              {{#with fullName}}
                <div class='col-4'>
                  {{#with surname}}
                    <div>{{title}}</div>
                    <div><b>{{value}}</b></div>
                  {{/with}}
                </div>
                <div class='col-4'>
                  {{#with name}}
                    <div>{{title}}</div>
                    <div><b>{{value}}</b></div>
                  {{/with}}
                </div>
                <div class='col-4'>
                  {{#with middleName}}
                    <div>{{title}}</div>
                    <div><b>{{value}}</b></div>
                  {{/with}}
                </div>
              {{/with}}
            </div>
          </div>
          <div class='card p-2 mt-3'>
            <div class='row'>
              {{#with otherInfo}}
                <div class='col-4'>
                  {{#with birthday}}
                    <div>{{title}}</div>
                    <div><b>{{value}}</b></div>
                  {{/with}}
                </div>
                <div class='col-4'>
                  {{#with sex}}
                    <div>{{title}}</div>
                    <div><b>{{value}}</b></div>
                  {{/with}}
                </div>
                <div class='col-4'>
                  {{#with language}}
                    <div>{{title}}</div>
                    <div><b>{{value}}</b></div>
                  {{/with}}
                </div>
              {{/with}}
            </div>
          </div>
        {{/with}}
        <div class='card p-2 mt-3'>
          <div class='row'>
            {{#each buttons}}
              <div class='col-4'>
                <a href='{{link}}' class='btn {{#if isPrimary}} btn-primary {{/if}} {{#if isSecondary}} btn-outline-secondary {{/if}} {{#if isDanger}} btn-outline-danger {{/if}}'>{{text}}</a>
              </div>
            {{/each}}
          </div>
        </div>
      </div>
      <div class='card p-2 mt-2'>
        {{#with recipients}}
          <h3 class='mb-3'>{{title}}</h3>
          <div class='row'>
            {{#each users}}
              <div class='col-4 pe-0'>
                <div class='card p-2'>
                  <div>{{name}}</div>
                  <div>{{phone}}</div>
                  <div class='col-4 mt-2'>
                  {{#with button}}
                    <a href='{{link}}' class='btn btn-primary btn-sm'>{{text}}</a>
                  {{/with}}
                  </div>
                </div>
              </div>
            {{/each}}
          </div>
        {{/with}}
      </div>
      <div class='card p-2 mt-2'>
        {{#with contacts}}
          <h3 class='mb-3'>{{title}}</h3>
          <div class='row'>
            {{#each contactData}}
              <div class='col-4 pe-0'>
                <div class='card p-2'>
                  <div>{{title}}</div>
                  <div><b>{{value}}</b></div>
                  <div class='col-4 mt-2'>
                    {{#with button}}
                      <a href='{{link}}' class='btn btn-sm {{#if isPrimary}} btn-primary {{/if}} {{#if isSecondary}} btn-outline-secondary {{/if}} {{#if isDanger}} btn-outline-danger {{/if}}'>{{text}}</a>
                    {{/with}}
                  </div>
                </div>
              </div>
            {{/each}}
          </div>
        {{/with}}
      </div>
    {{/with}}
  </section>
  <hr class='mt-5'>
  {{> footerShop}}
</main>