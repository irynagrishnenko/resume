<div class='card p-1 ps-2 pe-3 mb-3'>
  <div class='row'>
    <div class='col-2 pe-0'>
      <img
        class='card-img-top'
        src='{{image}}'
        alt='{{name}}'
      />
    </div>
    <div class='col-4 ps-1 pe-1'>
      <div class='card-body p-1 pt-2'>
        <h6 class='card-title'>{{name}}</h6>
        <p class='mb-0'>{{description}}</p>
      </div>
    </div>
    <div class='col-2 pt-4'>
      {{#with price}}
        <div>{{title}}:</div> 
        <div><b>{{value}}</b></div>
      {{/with}}
    </div>
    <div class='col-2 pt-5'>
      {{amount}}
    </div>
    <div class='col-2 p-0'>
      {{#each buttons}}
        <button class='btn m-2 {{#if isPrimary}} btn-primary {{/if}} {{#if isDanger}} btn-outline-danger {{/if}}'>{{text}}</button>
      {{/each}}
    </div>
  </div>
</div>